<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
      android:id="@+id/rl_share"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/padding_12"
      android:paddingBottom="@dimen/padding_12"
      android:background="@android:color/white">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:text="分享" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_next_right" />
    </RelativeLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/cp_gray" />
    <RelativeLayout
      android:id="@+id/rl_city_choose"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/padding_12"
      android:paddingBottom="@dimen/padding_12"
      android:background="@android:color/white">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:text="城市选择" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_next_right" />
    </RelativeLayout>
    <Button
      android:id="@+id/btn_comment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_16"
      android:text="评论" />

    <Button
      android:id="@+id/btn_progress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="彩虹进度" />
    <Button
      android:id="@+id/btn_fling_anim"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="FlingAnimation" />
    <Button
      android:id="@+id/btn_web_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="QQ Web View" />
    <Button
      android:id="@+id/bd_map_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="百度地图" />
    <Button
      android:id="@+id/btn_tab"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Tab" />
    <Button
      android:id="@+id/btn_dialog"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Dialog" />
    <Button
      android:id="@+id/bt_timer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="计时器" />
  </LinearLayout>
</layout>
