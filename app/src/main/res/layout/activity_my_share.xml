<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mine.tools.share.MyShareActivity">
    <include layout="@layout/layout_toolbar"
      android:id="@+id/include2" />
    <Button
      android:id="@+id/btn_intent_share"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="116dp"
      android:text="系统分享"
      app:layout_constraintEnd_toEndOf="@+id/btn_umeng_share"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/btn_umeng_share"
      app:layout_constraintTop_toTopOf="parent" />
    <Button
      android:id="@+id/btn_umeng_share"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="42dp"
      android:layout_marginStart="57dp"
      android:text="友盟分享"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_intent_share"
      tools:layout_editor_absoluteX="57dp"
      tools:layout_editor_absoluteY="118dp" />
    <Button
      android:id="@+id/btn_hrowser_share"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="浏览器分享"
      android:layout_marginTop="112dp"
      app:layout_constraintTop_toBottomOf="@+id/btn_umeng_share"
      app:layout_constraintEnd_toEndOf="@+id/btn_umeng_share" />
  </android.support.constraint.ConstraintLayout>

</layout>